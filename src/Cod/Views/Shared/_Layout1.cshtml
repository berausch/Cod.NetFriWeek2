<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css">
</head>
<body> 
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-lg-7 logo">
                    <h1>@Html.ActionLink("Son of Cod Seafood", "Index", "Home", new { @class = "linky" })</h1>
                    <h3>Thank the Cods, it's Good!</h3>
                </div>
                <div class="col-lg-2">
                </div>
                <div class="col-lg-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="log">
                            <h5>Signed in as: </h5>
                            <h5>@User.Identity.Name</h5>

                            @using (Html.BeginForm("LogOff", "Account"))
                            {
                                <input type="submit" value="Log out" />
                            }

                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="home-stuff">
            @RenderBody()
        </div>
    </div>
</body>

</html>
